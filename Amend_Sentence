string amendSentence (string s)
    {
        string temp="";
        for(int i=0;i<s.size();i++)
        {
            if(s[i]>='a'&& s[i]<='z')
            temp+=s[i];
            else 
            {
                if(i>0)
                temp+=' ';
                temp+=tolower(s[i]);
            }
        }
        return temp;
    }
